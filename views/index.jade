extends layout

block content
  h1.page-header= title
  .row
      .col-xs-6.col-sm-6.col-md-6
          h2 Search API
          form#search_form
              .form-group
                  label(for="term") Term
                  input.form-control#search_term(type="text")
              .form-group
                  label(for="location") Location
                  input.form-control#search_location(type="text")
          button.btn.btn-primary#search_button Search
      .col-xs-6.col-sm-6.col-md-6
          h2 Business API
          form#business_form
              .form-group
                  label(for="name") Name
                  input.form-control#name(type="text")
          button.btn.btn-primary#business_button Search